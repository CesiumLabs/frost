{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "allowJs": true,
        "outDir": "./build" /* Redirect output structure to the directory. */,
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
    },

    "exclude": ["__test__", "__docs__"]
}
